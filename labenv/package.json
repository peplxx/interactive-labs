{
  "name": "labenv",
  "version": "1.0.0",
  "description": "NodeJS Single-Page Web App with Renderer and Playground",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start:code": "code-server --bind-addr=0.0.0.0:8080 --auth none --disable-telemetry --disable-update-check --disable-workspace-trust --disable-getting-started-override ~",
    "start:server": "node server.js",
    "start": "npm-run-all --parallel start:server start:code",
    "build": "vite build"
  },
  "dependencies": {
    "@muyajs/core": "^0.0.39",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "marked": "^11.2.0",
    "node-pty": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "socket.io": "^4.7.4",
    "split.js": "^1.6.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "vite": "^7.3.1"
  }
}
